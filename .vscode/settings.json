{
  // ---------- Formatting ----------
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.formatOnSaveMode": "modificationsIfAvailable",

  // ---------- ESLint + TypeScript ----------
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "typescript.tsserver.maxTsServerMemory": 4096,

  // ---------- Tailwind / CSS ----------
  "css.lint.unknownAtRules": "ignore",

  // ---------- Hide heavy/generated stuff from Explorer ----------
  "files.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/.firebase": true,
    "**/.vercel": true,
    "**/.turbo": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true
  },

  // ---------- Hide same from Search ----------
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/.firebase": true,
    "**/.vercel": true,
    "**/.turbo": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true
  },

  // ---------- Prevent watcher overload ----------
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/.next/**": true,
    "**/.firebase/**": true,
    "**/.vercel/**": true,
    "**/.turbo/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/coverage/**": true,
    "**/.vscode/**": true
  },

  // ---------- Git ----------
  "git.ignoreLimitWarning": true
}