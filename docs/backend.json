
{
  "entities": {
    "User": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "avatarUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL of the user's avatar image."
        },
        "favoriteSpotIds": {
            "type": "array",
            "description": "An array of spot IDs that the user has favorited.",
            "items": {
                "type": "string"
            }
        },
        "role": {
          "type": "string",
          "description": "The role of the user.",
          "enum": ["admin", "user"]
        },
        "homeLocation": {
            "type": "object",
            "description": "The user's default home map location and zoom level.",
            "properties": {
                "lat": { "type": "number" },
                "lng": { "type": "number" },
                "zoom": { "type": "number" }
            },
            "required": ["lat", "lng", "zoom"]
        }
      },
      "required": ["name", "email"]
    },
    "Spot": {
        "title": "Spot",
        "description": "A point of interest on the map.",
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "category": {
            "type": "string",
            "enum": [
              "interesting",
              "funny",
              "strange",
              "cool",
              "creepy",
              "beautiful",
              "people",
              "buildings",
              "nature",
              "art",
              "glitch",
              "architecture",
              "abandoned"
            ]
          },
          "location": {
            "type": "object",
            "properties": {
              "lat": {"type": "number"},
              "lng": {"type": "number"},
              "heading": {"type": "number"},
              "pitch": {"type": "number"},
              "fov": {"type": "number"}
            },
            "required": ["lat", "lng", "heading", "pitch", "fov"]
          },
          "jurisdiction": {
            "type": "object",
            "properties": {
              "city": {"type": "string"},
              "state": {"type": "string"},
              "country": {"type": "string"}
            },
            "required": ["country"]
          },
          "authorId": {
              "type": "string",
              "description": "The ID of the user who created the spot."
          },
          "createdAt": {
              "type": "string",
              "format": "date-time",
              "description": "The date and time the spot was created."
          },
          "ratingCount": {
            "type": "number",
            "description": "The total number of ratings this spot has received."
          },
          "totalRating": {
              "type": "number",
              "description": "The sum of all ratings for this spot."
          },
          "ratings": {
            "type": "object",
            "description": "A map of userId to their rating for this spot.",
            "additionalProperties": {
              "type": "number"
            }
          },
          "isApproved": {
            "type": "boolean",
            "description": "Whether the spot has been approved by an admin."
          }
        },
        "required": ["title", "description", "category", "location", "authorId", "createdAt"]
      }
  },
  "auth": {
    "providers": ["anonymous", "google.com", "password"]
  },
  "firestore": {
      "/users/{userId}": {
        "schema": {
          "$ref": "#/entities/User"
        },
        "description": "Stores user profile information."
      },
      "/spots/{spotId}": {
        "schema": {
          "$ref": "#/entities/Spot"
        },
        "description": "Stores all the spots submitted by users."
      },
      "/users/{userId}/spots/{spotId}": {
        "schema": {
            "$ref": "#/entities/Spot"
        },
        "description": "A subcollection to store spots created by a specific user."
      }
  }
}
